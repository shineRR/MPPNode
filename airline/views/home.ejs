<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Main Page!</title>
</head>
<link rel="stylesheet" type="text/css" href="css/style.css" />

<body>
<header>
</header>

<main>
    <table class="styled-table">
        <thead>
        <tr>
            <th>Destination</th>
            <th>Date</th>
            <th>File</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        <% flights.forEach(function(flight) { %>
            <tr>
                <td><%= flight.destination %></td>
                <td><%= flight.date%></td>
                <td><a href="<%= flight.file%>">Download File</a></td>
                <td><%= flight.price%></td>
            </tr>
        <% }); %>
        </tbody>
    </table>
    <div class="login-box">
        <h2>New Record</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="user-box">
                <input type="text" required id="destination" placeholder="Madrid" name="destination"><br><br>
                <label for="destination">Destination:</label>
            </div>
            <div class="user-box">

                <input type="date" required id="date" name="date"><br><br>
            </div>
            <div class="user-box">
                <input type="file" name="file"><br><br>
                <label for="file">File:</label>
            </div>
            <div class="user-box">
                <input type="number" required id="price" placeholder="100" name="price"><br><br>
                <label for="price">Price:</label>
            </div>
            <a>
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                <!--                Submit-->
                <input type="submit" value="Submit" class="btn">
            </a>
        </form>
    </div>
</main>

<footer>
</footer>

</body>
</html>
